<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MongoMigrate - Database Migration Tool</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>

<body>
    <main class="p-4">
        <nav class="navbar mb-3">
            <div class="container-fluid px-0">
                <a class="navbar-brand" href="/"><i class="fas fa-database me-2"></i>MongoMigrate</a>
            </div>
        </nav>

        <div class="card">
            <div class="card-header">
                <h4><i class="fas fa-copy me-2"></i>Database Migration Configuration</h4>
            </div>
            <div class="card-body">
                <form id="backupForm">
                    <div class="row">
                        <!-- Source Database Configuration -->
                        <div class="col-md-6">
                            <div class="card h-100">
                                <div class="card-header">
                                    <h5 class="m-0"><i class="fas fa-download me-2" style="opacity:0.9"></i> Source
                                        Database</h5>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <label for="sourceUri" class="form-label">Source MongoDB URI *</label>
                                        <input type="text" class="form-control" id="sourceUri"
                                            placeholder="mongodb://localhost:27017/" required>
                                        <div class="form-text">Enter the complete MongoDB connection string</div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="sourceDatabaseName" class="form-label">Database Name *</label>
                                        <div class="input-group">
                                            <input type="text" class="form-control" id="sourceDatabaseName"
                                                placeholder="Enter database name" required>
                                            <button class="btn btn-outline-secondary" type="button"
                                                id="loadDatabasesBtn">
                                                <i class="fas fa-refresh"></i> Load
                                            </button>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Available Databases</label>
                                        <select class="form-select" id="availableDatabases" size="3" disabled>
                                            <option>Click "Load" to fetch databases</option>
                                        </select>
                                    </div>
                                    <div class="mb-3">
                                        <button type="button" class="btn btn-info w-100" id="loadCollectionsBtn"
                                            disabled>
                                            <i class="fas fa-list me-2"></i>Load Collections
                                        </button>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Collections to Copy</label>
                                        <div id="collectionsContainer" class="border rounded p-2"
                                            style="max-height: 300px; overflow-y: auto;">
                                            <div class="text-muted text-center py-3">
                                                <i class="fas fa-info-circle me-1"></i>
                                                Load collections to select them
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Target Database Configuration -->
                        <div class="col-md-6">
                            <div class="card h-100">
                                <div class="card-header">
                                    <h5 class="m-0"><i class="fas fa-upload me-2" style="opacity:0.9"></i> Target
                                        Database</h5>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <label for="targetUri" class="form-label">Target MongoDB URI *</label>
                                        <input type="text" class="form-control" id="targetUri"
                                            placeholder="mongodb://localhost:27017/" required>
                                        <div class="form-text">Enter the target MongoDB connection string</div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="targetDatabaseName" class="form-label">Target Database Name
                                            *</label>
                                        <input type="text" class="form-control" id="targetDatabaseName"
                                            placeholder="Target database name" required>
                                        <div class="form-text">Collections will be copied with the same names</div>
                                    </div>
                                    <div class="mb-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="sameAsSource" checked>
                                            <label class="form-check-label" for="sameAsSource">
                                                Use same database name as source
                                            </label>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="clearTarget">
                                            <label class="form-check-label" for="clearTarget">
                                                Clear target collections before copying
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                                    <button type="submit" class="btn btn-primary btn-lg me-md-2" id="startBackupBtn"
                                        disabled>
                                        <i class="fas fa-play me-2"></i>Start Migration
                                    </button>
                                <button type="button" class="btn btn-secondary btn-lg" id="resetFormBtn">
                                    <i class="fas fa-undo me-2"></i>Reset Form
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        </div>

        <!-- Progress Section -->
        <div class="card mt-4" id="progressCard" style="display: none;">
            <div class="card-header">
                <h5><i class="fas fa-chart-line me-2"></i>Migration Progress</h5>
            </div>
            <div class="card-body">
                <div class="progress mb-3">
                    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar"
                        style="width: 0%"></div>
                </div>
                <div id="progressLog" style="max-height: 200px; overflow-y: auto; padding: 10px; border-radius: 5px;">
                    <!-- Progress messages will appear here -->
                </div>
            </div>
        </div>
        </div>

        <!-- Results Section -->
        <div class="card mt-4" id="resultsCard" style="display: none;">
            <div class="card-header">
                <h5><i class="fas fa-check-circle me-2"></i>Migration Results</h5>
            </div>
            <div class="card-body">
                <div id="resultsContent">
                    <!-- Results will appear here -->
                </div>
            </div>
        </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/app.js"></script>
</body>

</html>